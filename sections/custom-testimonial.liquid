
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://kenwheeler.github.io/slick/slick/slick.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>


 <div id="section-id-{{ section.id }}"
		 class="card card-scheme card-scheme--{{ section.settings.color_scheme }} card-br-oh fully-padded-row-x--medium fully-padded-row--large">
		<div class="testimonial-list__inner">
			  <div class="testimonial-custom slider-testi">
				{%- for block in section.blocks -%}
				  <div class="testimonial" {{ block.shopify_attributes }}>
					{% if section.settings.enable_images %}
					  <figure class="testimonial__image">
						<div class="testimonial__image-wrapper card-br-oh">
						  {% if block.settings.image != blank %}
							{%- render 'responsive-image', image: block.settings.image, aspect_ratio: image_aspect_ratio, cover: cover -%}
						  {% else %}
							<div class="placeholder-image" style="padding-top:{{ 100.0 | divided_by: image_aspect_ratio | round }}%">{{ 'image' | placeholder_svg_tag }}</div>
						  {% endif %}
						</div>

						{% if block.settings.image_caption != blank %}
						  <figcaption class="testimonial__image__caption{% if block.settings.link != blank %} underline{% endif %}">
							{{ block.settings.image_caption | escape }}
						  </figcaption>
						{% endif %}
					  </figure>
					{% endif %}

					<div class="testimonial__text">
					  {%- if block.settings.star_rating > 0 -%}
						<div class="testimonial__star-rating heading-font">
						  {%- for i in (1..block.settings.star_rating) -%}
						  <span class="testimonial__star">{% render 'svg-star' %}</span>
						  {%- endfor -%}
						</div>
					  {%- endif -%}

					  {%- if block.settings.testimonial != blank -%}
						<div class="testimonial__quote-wrapper">
						  <blockquote class="testimonial__blockquote{% if section.settings.text_caps %} testimonial__blockquote--caps{% endif %} heading-font {{ section.settings.title_size }}">{% render 'feature-heading-text', text: block.settings.testimonial %}</blockquote>
						</div>
					  {%- endif -%}

					  {%- if block.settings.author != blank -%}
						<div class="testimonial__author">
						  &mdash; {{ block.settings.author | escape }}
						</div>
					  {%- endif -%}
					</div>
				  </div>
				{%- endfor -%}
			  </div>
		
		  </div>
	  </div>


<style>
.testimonial-custom.slider-testi {
    padding: 40px 80px;
    width: 100%;
}
  .testimonial-custom.slider-testi .testimonial__text {
    text-align: center;
    padding: 0px 15%;
}
  .testimonial-custom.slider-testi .testimonial__text blockquote {
    font-size: 25px;
    color: #fff;
        line-height: 35px;
}
  .testimonial-custom.slider-testi .testimonial__author {
    font-size: 20px;
    font-weight: 500;
    color: #fff;
}
.shopify-section.section-testimonials .card.card-scheme{
    background-image: url('https://cdn.shopify.com/s/files/1/0777/0718/2389/files/Background_ca4d58a3-9b6b-4caf-b23b-e1e52ea6ab20_1.png?v=1718785638');
    background-size: cover;
    background-position: center;
    padding: 10px 0 50px 0px;
    border-radius: 0px !important;
}
  .testimonial-custom.slider-testi button {
    border: 1px solid white;
    border-radius: 50%;
    width: 12px;
    height: 12px;
}
  .testimonial__star svg {
    width: 30px;
    height: 30px;
    color: rgba(222, 122, 33, 1);
}
  .slick-dots li.slick-active button:before {
    background: #fff !important;
    width: 11px;
    color: transparent !important;
    height: 11px;
    border-radius: 50%;
}
  .slick-dots {
    width: 100%;
    left: 0;
    right: 0;
}
</style>
	{% schema %}
	  {
		"name": "Custom Testimonials",
		"class": "section-testimonials",
		"disabled_on": {
		  "groups": [
			"aside"
		  ]
		},
		"settings": [
		  {
			"type": "text",
			"id": "title",
			"label": "Heading"
		  },
		  {
			"type": "checkbox",
