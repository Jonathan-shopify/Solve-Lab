			"default": false
		  },
		  {
			"type": "checkbox",
			"id": "enable_images",
			"label": "Enable images",
			"default": true
		  },
		  {
			"type": "select",
			"id": "image_shape",
			"label": "Image shape",
			"options": [
			  {
				"value": "natural",
				"label": "Natural"
			  },
			  {
				"value": "landscape",
				"label": "Landscape (5:4)"
			  },
			  {
				"value": "square",
				"label": "Square (1:1)"
			  },
			  {
				"value": "portrait",
				"label": "Portrait (4:5)"
			  }
			],
			"default": "square"
		  },
		  {
			"type": "select",
			"id": "color_scheme",
			"label": "Color scheme",
			"default": "1",
			"options": [
			  {
				"value": "1",
				"label": "Card 1"
			  },
			  {
				"value": "2",
				"label": "Card 2"
			  },
			  {
				"value": "3",
				"label": "Card 3"
			  },
			  {
				"value": "none",
				"label": "No card"
			  }
			]
		  },
		  {
			"type": "checkbox",
			"id": "text_caps",
			"label": "Capitalize text",
			"default": false
		  },
		  {
			"type": "select",
			"id": "title_size",
			"label": "Quote size",
			"default": "h1-style",
			"options": [
			  {
				"label": "Extra small",
				"value": "h3-style"
			  },
			  {
				"label": "Small",
				"value": "h2-style"
			  },
			  {
				"label": "Regular",
				"value": "h1-style"
			  },
			  {
				"label": "Impact",
				"value": "hl-style"
			  },
			  {
				"label": "Extra impact",
				"value": "hsl-style"
			  }
			]
		  },
		  {
			"id": "autoplay",
			"type": "checkbox",
			"label": "Auto-rotate testimonials",
			"info": "Only applies when images are enabled",
			"default": true
		  },
		  {
			"type": "range",
			"id": "autoplay_speed",
			"min": 4,
			"max": 20,
			"step": 1,
			"unit": "s",
			"label": "Change testimonials every",
			"default": 5
		  }
		],
		"blocks": [
		  {
			"type": "testimonial",
			"name": "Testimonial",
			"limit": 8,
			"settings": [
			  {
				"type": "range",
				"id": "star_rating",
				"min": 0,
				"max": 5,
				"step": 1,
				"label": "Star rating",
				"default": 5
			  },
			  {
				"type": "text",
				"id": "testimonial",
				"label": "Testimonial",
				"info": "For best results, keep the word count similar in each quote. Enter <br> for a line-break"
			  },
			  {
				"type": "text",
				"id": "author",
				"label": "Author",
				"default": "Author's name"
			  },
			  {
				"type": "image_picker",
				"id": "image",
				"label": "Image",
				"info": "1000 x 800px recommended"
			  },
			  {
				"type": "text",
				"id": "image_caption",
				"label": "Image caption"
			  }
			]
		  }
		],
		"presets": [
		  {
			"name": "Custom Testimonials",
			"settings": {},
			"blocks": [
			  {
				"type": "testimonial",
				"settings": {
				}
			  },
			  {
				"type": "testimonial",
				"settings": {
				}
			  }
			]
		  }
		]
	  }
