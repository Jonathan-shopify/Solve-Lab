
<div class="left mob-blogs">
   <div class="mm-bb blog-containers">
     {% for block in section.blocks %}
        {% if block.settings.btitle-left != blank %}
       <div class="left blog">
         <a href="{{ block.settings.burl-left }}">
           <div class="blog-content">
             <div class="blog-image">
               <img src="{{ block.settings.image-left | img_url: 'medium' }}" alt="{{ block.settings.btitle-left }}">
             </div>
             <h3>{{ block.settings.btitle-left }}</h3>
             <!-- Add other content like date, author, etc., if needed -->
           </div>
         </a>
       </div>
    {% endif %}
     {% endfor %}
   </div>
   </div>
   