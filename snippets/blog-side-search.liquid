<div class="blog-search">
<form action="/search" method="get" role="search">
    <input type="hidden" name="type" value="article" />
    <div class="input-group--underline">
      <input class="input-group__field" type="search" name="q" value="{{ search.terms | escape }}" placeholder="Search" aria-label="{{ 'general.search.placeholder' | t }}">
      <div class="input-group__btn">
        <button type="submit" class="btn btn--clear btn--square">
            {% render 'svg-search' %}
          {% comment %} <span class="icon__fallback-text">{{ 'general.search.submit' | t }}</span> {% endcomment %}
        </button>
      </div>
    </div>
  </form>
</div>